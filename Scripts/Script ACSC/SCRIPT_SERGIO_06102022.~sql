SELECT 
E.CD_MULTI_EMPRESA,
A.CD_ATENDIMENTO,
F.CD_REG_FAT,
E.DT_ATENDIMENTO,
E.CD_PACIENTE,
PC.NM_PACIENTE,
A.CD_AVISO_CIRURGIA,
C.CD_CIRURGIA,
D.DS_CIRURGIA,
A.DT_REALIZACAO,
A.TP_SITUACAO,
DECODE (E.TP_ATENDIMENTO, 'I', 'INTERNAÇÃO', 'U', 'URGÊNCIA', 'E', 'EXTERNO', 'A', 'AMBULATORIO') TP_ATENDIMENTO,
C.CD_PRESTADOR,
PR.NM_PRESTADOR,
C.CD_ATI_MED,
AM.DS_ATI_MED,
E.CD_CONVENIO,
CONV.NM_CONVENIO,
'INTERNADO'CONTA,
--dbamv.fc_acsc_tuss(A.CD_MULTI_EMPRESA,F.CD_PRO_FAT,E.CD_CONVENIO,'COD')TUSS,
--dbamv.fc_acsc_tuss(A.CD_MULTI_EMPRESA,F.CD_PRO_FAT,E.CD_CONVENIO,'DESC')DS_TUSS,
F.CD_PRO_FAT,
G.VL_ATO
FROM
DBAMV.AVISO_CIRURGIA A
INNER JOIN DBAMV.PRESTADOR_AVISO C ON C.CD_AVISO_CIRURGIA = A.CD_AVISO_CIRURGIA 
INNER JOIN DBAMV.CIRURGIA D ON D.CD_CIRURGIA = C.CD_CIRURGIA
INNER JOIN DBAMV.ATENDIME E ON E.CD_ATENDIMENTO = A.CD_ATENDIMENTO
INNER JOIN DBAMV.ITREG_FAT F ON F.CD_MVTO = A.CD_AVISO_CIRURGIA
INNER JOIN DBAMV.ITLAN_MED G ON G.CD_REG_FAT = F.CD_REG_FAT 
                             AND G.CD_LANCAMENTO = F.CD_LANCAMENTO
                             AND G.CD_ATI_MED = C.CD_ATI_MED
                             AND G.CD_PRESTADOR = C.CD_PRESTADOR
INNER JOIN DBAMV.PRESTADOR PR ON PR.CD_PRESTADOR = C.CD_PRESTADOR                             
INNER JOIN DBAMV.PACIENTE PC ON PC.CD_PACIENTE = E.CD_PACIENTE    
INNER JOIN DBAMV.ATI_MED AM ON AM.CD_ATI_MED = G.CD_ATI_MED   
INNER JOIN DBAMV.CONVENIO CONV ON CONV.CD_CONVENIO = E.CD_CONVENIO                      
WHERE A.CD_AVISO_CIRURGIA = 293823
AND A.TP_SITUACAO = 'R'
ORDER BY C.CD_CIRURGIA, C.CD_ATI_MED
