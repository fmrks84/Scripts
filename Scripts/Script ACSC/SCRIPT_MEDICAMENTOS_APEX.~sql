SELECT 
PD.CD_PRODUTO,
PF.CD_PRO_FAT,
PF.DS_PRO_FAT,
PF.SN_OPME,
GP.CD_GRU_PRO,
GP.TP_GRU_PRO ,
CASE WHEN PF.SN_OPME = 'S' OR GP.TP_GRU_PRO = 'OP' THEN 'APEX' ELSE 'FORA_APEX' END APEX,
SP.CD_SIMPRO
FROM PRO_FAT PF
INNER JOIN GRU_PRO GP ON GP.CD_GRU_PRO = PF.CD_GRU_PRO
LEFT JOIN IMP_SIMPRO SP ON SP.CD_PRO_FAT = PF.CD_PRO_FAT
AND SP.CD_TAB_FAT = 2
INNER JOIN PRODUTO PD ON PD.CD_PRO_FAT = PF.CD_PRO_FAT 
WHERE PF.CD_PRO_FAT IN
('00314824','09078218','00325334','00325335','00325336','00133478',
'00043696','00043695','00284456','00277451','00299109','00144669',
'09088319','00282068','00296053','02040923','02040295','09069515',
'74176366','74176374','00011437','90006410','90006429','90254392',
'78384230','00070331')
ORDER BY PD.CD_PRODUTO, PF.CD_PRO_FAT
