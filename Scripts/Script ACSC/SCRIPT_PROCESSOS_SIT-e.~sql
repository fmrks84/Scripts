from site_evento x where to_date(x.dt_evento,'dd/mm/rrrr') = to_date(sysdate,'dd/mm/rrrr')
---and x.cd_site_acao_evento in (2,3,5,7)
order by X.DT_EVENTO desc  --order by x.cd_site_evento desc ;
