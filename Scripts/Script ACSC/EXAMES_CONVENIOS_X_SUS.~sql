
SELECT X.CD_EXA_LAB CD_EXAME, 
       X.NM_EXA_LAB NM_EXAME,
       X.CD_PRO_FAT PROCEDIMENTO_CONVENIO,
       X.CD_PROCEDIMENTO_SIH PROCEDIMENTO_SUS 
FROM EXA_LAB X 
LEFT JOIN PROCEDIMENTO_SUS PS ON PS.CD_PROCEDIMENTO = X.CD_PROCEDIMENTO_SIH 
WHERE X.SN_ATIVO = 'S'
AND PS.SN_ATIVO = 'S'


UNION ALL 

SELECT RX.CD_EXA_RX CD_EXAME,
       RX.DS_EXA_RX NM_EXAME,
       RX.EXA_RX_CD_PRO_FAT PROCEDIMENTO_CONVENIO,
       RX.CD_PROCEDIMENTO_SIH PROCEDIMENTO_SUS
FROM EXA_RX RX 
LEFT JOIN PROCEDIMENTO_SUS PS ON PS.CD_PROCEDIMENTO = RX.CD_PROCEDIMENTO_SIH
WHERE RX.SN_ATIVO = 'S'
AND PS.SN_ATIVO = 'S'
ORDER BY 1 

